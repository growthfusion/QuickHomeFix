# HTTP â†’ HTTPS redirect
server {
    if ($host = www.quickhomefix.pro) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = quickhomefix.pro) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name quickhomefix.pro www.quickhomefix.pro;
    return 301 https://$host$request_uri;




}

# HTTPS server
server {
    listen 443 ssl http2;
    server_name quickhomefix.pro www.quickhomefix.pro;

    root /var/www/quickhomefix/dist;
    index index.html;

    # SSL (Certbot will fill these automatically)
    ssl_certificate /etc/letsencrypt/live/quickhomefix.pro/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/quickhomefix.pro/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # React SPA routing
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Static assets caching
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|woff|woff2|ttf|svg|eot)$ {
        expires 30d;
        add_header Cache-Control "public, no-transform";
    }

    # API reverse proxy to Express backend
    location /api/ {
        proxy_pass http://localhost:5000/api/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }


}

